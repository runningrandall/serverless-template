{
    "name": "serverless-template-monorepo",
    "version": "1.0.0",
    "private": true,
    "lint-staged": {
        "frontend/**/*.{ts,tsx}": [
            "pnpm --filter frontend exec eslint --fix"
        ]
    },
    "scripts": {
        "build": "pnpm -r run build",
        "test": "pnpm -r run test",
        "lint": "pnpm -r run lint",
        "deploy": "pnpm --filter infra run deploy",
        "dev": "pnpm --filter frontend run dev",
        "prepare": "husky",
        "db:start": "./scripts/start-local-db.sh",
        "db:init": "node ./scripts/init-local-db.js",
        "db:seed": "node ./scripts/seed-local-db.js",
        "api:start": "dotenv -e .env -- ./scripts/start-local-api.sh",
        "dev:backend": "dotenv -e .env -- pnpm --filter backend run build --watch & pnpm api:start",
        "generate": "plop",
        "commit": "cz",
        "test:integration": "node scripts/integration-test.js",
        "release": "standard-version",
        "release:first": "standard-version --first-release",
        "release:dry": "standard-version --dry-run"
    },
    "devDependencies": {
        "@aws-sdk/client-dynamodb": "^3.987.0",
        "@commitlint/cli": "^20.4.1",
        "@commitlint/config-conventional": "^20.4.1",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/commit-analyzer": "^13.0.1",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^12.0.5",
        "@semantic-release/release-notes-generator": "^14.1.0",
        "commitizen": "^4.3.1",
        "concurrently": "^9.2.1",
        "cz-conventional-changelog": "^3.3.0",
        "dotenv-cli": "^11.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "plop": "^4.0.5",
        "semantic-release": "^25.0.3",
        "typescript": "^5.9.3"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@scarf/scarf",
            "@tree-sitter-grammars/tree-sitter-yaml",
            "aws-sdk",
            "core-js-pure",
            "cypress",
            "esbuild",
            "sharp",
            "tree-sitter",
            "tree-sitter-json",
            "unrs-resolver"
        ],
        "peerDependencyRules": {
            "allowedVersions": {
                "react": "19.x",
                "react-dom": "19.x",
                "tree-sitter": "*"
            }
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
